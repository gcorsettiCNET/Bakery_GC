<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bakery_GC</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bakery_GC.styles.css" asp-append-version="true" />
    <style>
        body {
            background: #fff8f0;
            color: #333;
            font-family: 'Segoe UI', Arial, sans-serif;
        }

        .navbar {
            background: linear-gradient(90deg, #ff9800 0%, #ffb74d 100%);
            border-bottom: 3px solid #ff9800;
        }

        .navbar-brand, .navbar-nav .nav-link {
            color: #fff !important;
            font-weight: 600;
            letter-spacing: 1px;
            transition: color 0.2s;
        }

            .navbar-nav .nav-link:hover, .navbar-nav .nav-link.active {
                color: #fff3e0 !important;
                background: #ff9800;
                border-radius: 4px;
            }

        .navbar-toggler {
            border-color: #ff9800;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255,152,0, 0.7)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }

        .container main {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(255,152,0,0.08);
            padding: 2rem 2rem 1.5rem 2rem;
            margin-top: 2rem;
        }

        footer {
            background: #ff9800;
            color: #fff;
            padding: 1rem 0;
            margin-top: 2rem;
            font-size: 1rem;
            letter-spacing: 1px;
        }

            footer a {
                color: #fff3e0;
                text-decoration: underline;
            }

                footer a:hover {
                    color: #fff;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bakery_GC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/AboutMe">About Me</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Products">Prodotti</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Cart">Carrello</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Checkout">Checkout</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Bakery_GC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
